        android:textColor="#FFFFFF"
        app:backgroundTint="#455663"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="81dp" />

    <TextView
        android:id="@+id/title_Union"
        android:layout_width="wrap_content"
