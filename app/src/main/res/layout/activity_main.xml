        tools:layout_editor_absoluteY="517dp" />

    <ImageView
        android:id="@+id/imgPrinceton"
        android:layout_width="364dp"
        android:layout_height="209dp"
        android:layout_alignLeft="@id/btnPrinceton"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-69dp"
        android:layout_marginLeft="-363dp"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="4dp"
        android:layout_toLeftOf="@id/btnPrinceton"
        android:contentDescription="@string/description_Princeton"
        app:srcCompat="@drawable/princeton_school" />

</RelativeLayout>